@model ProjetoCadastro.Models.Produto
@{
    ViewData["Title"] = "Cadastrar Produto";
}

<div class="container mt-5 col-md-6">
    <h2 class="text-center mb-4">Cadastrar Produto</h2>

    <form id="formProduto" asp-action="Cadastrar" method="post" class="card p-4 shadow">
        <div class="mb-3">
            <label class="form-label">Nome</label>
            <input asp-for="Nome" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Descrição</label>
            <textarea asp-for="Descricao" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Preço</label>
            <input asp-for="Preco" type="number" step="0.01" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Quantidade</label>
            <input asp-for="Quantidade" type="number" min="0" class="form-control" required />
        </div>

        <button type="button" class="btn btn-primary w-100" onclick="enviarProduto()">Cadastrar Produto</button>
    </form>
</div>

<script>
    function enviarProduto() {
        document.getElementById("formProduto").submit();
    }
</script>