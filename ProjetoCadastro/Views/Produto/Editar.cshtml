@model ProjetoCadastro.Models.Produto
@{
    ViewData["Title"] = "Editar Produto";
}

<h2>Editar Produto</h2>

<form asp-action="Editar" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Descricao"></label>
        <input asp-for="Descricao" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" type="number" step="0.01" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Quantidade"></label>
        <input asp-for="Quantidade" type="number" class="form-control" />
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Salvar Alterações</button>
    <a asp-action="Listar" class="btn btn-danger">Cancelar</a>
</form>